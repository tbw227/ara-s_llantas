{
  "name": "aras-llantas-backend",
  "version": "1.0.0",
  "description": "Backend API for Ara's Llanta's tire shop",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "db:migrate": "knex migrate:latest --knexfile knexfile.js --env development",
    "db:rollback": "knex migrate:rollback --knexfile knexfile.js --env development",
    "db:seed": "knex seed:run --knexfile knexfile.js --env development"
  },
  "keywords": [
    "tires",
    "api",
    "express",
    "postgres"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.81.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "knex": "^3.1.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.5",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "routes/**/*.js",
      "server.js"
    ]
  }
}
